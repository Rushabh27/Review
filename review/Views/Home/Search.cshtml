@model review.Models.product
@{
    ViewBag.Title = "Search";
}

@if (ViewBag.flag == "false1")
{
    <h3>You Entered Empty String</h3>
}
else
{
    if (ViewBag.flag == "false2")
    {
        <h3>Records Not Found</h3>
    }
    else
    {
        <h2>Search Details</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.productname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.catId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subcatId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Websites)
                </th>
                <th></th>
            </tr>


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.productname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.img)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.catId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.subcatId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Websites)
                </td>

            </tr>


        </table>

    }
}

