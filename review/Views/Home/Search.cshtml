@model IEnumerable<review.Models.product>


@{
    ViewBag.Title = "Search";
}

<html>
<head>
    <link href="@Url.Content("~/Content/css/cat.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    @if (ViewBag.flag == "false1")
    {
        <h3>You Entered Empty String</h3>
    }
    else
    {
        if (ViewBag.flag == "false2")
        {
            <h3>Records Not Found</h3>
        }
        else
        { <div class="wrapper">
                <h1>Search Result</h1>


                <div class="clear"></div>
                <!-- items -->
                <div class="items">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <img src=" @Url.Content(item.img) " width="250px" height="250px" alt="item" />
                            <h2>  @Html.ActionLink(item.productname, "Details", "reviews", new { id = item.Id }, null)</h2>
                        </div>
                    }
                </div>
            </div>
        }



    }



</body>
</html>