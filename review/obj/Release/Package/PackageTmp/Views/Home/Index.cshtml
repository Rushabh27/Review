<body>
    <header>
        <center><h1 style="color:black;">Online Review System</h1></center>
        <!--/header-->
    </header>
    <hr>

    <div class="slider">
        <div id="about-slider">
            <div id="carousel-slider" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators visible-xs">
                    <li data-target="#carousel-slider" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-slider" data-slide-to="1"></li>
                    <li data-target="#carousel-slider" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/img/slide.jpg" class="img-responsive" alt="">
                        <div class="carousel-caption">
                            <h3>Know your products</h3>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/img/slide.jpg" class="img-responsive" alt="">
                        <div class="carousel-caption">
                            <h3>Get your Review</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/img/slide.jpg" class="img-responsive" alt="">
                        <div class="carousel-caption">
                            <h3>Review you Want</h3>
                        </div>
                    </div>
                </div>

                <a class="left carousel-control hidden-xs" href="#carousel-slider" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>

                <a class=" right carousel-control hidden-xs" href="#carousel-slider" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
            <!--/#carousel-slider-->
        </div>
        <!--/#about-slider-->
    </div>
    <!--/#slider-->

    <div class="services">
        <div class="container">
            <div class="text-center">
                <h2>Services</h2>
            </div>
            <div class="col-md-3 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
                <i class="fa fa-heart-o"></i>
                <h3>Categories</h3>
                <p>All the categories you want</p>
            </div>
            <div class="col-md-3 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                <i class="fa fa-cloud"></i>
                <h3>SubCategories</h3>
                <p>Many SubCategories</p>
            </div>
            <div class="col-md-3 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="900ms">
                <i class="fa fa-book"></i>
                <h3>Products</h3>
                <p>All your necessary products</p>
            </div>
            <div class="col-md-3 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="1200ms">
                <i class="fa fa-gear"></i>
                <h3>Reviews</h3>
                <p>Your Favourite Reviews</p>
            </div>
        </div>
    </div>
    <div class="services">
        <div class="container">
            <div class="text-center">
                <h2>Latest Products</h2>
            </div>
            @foreach (var item in ViewBag.p)
            {


                <div class="col-md-3 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
                    <img src=" @Url.Content(item.img) " width="250px" height="250px" alt="item" />
                    @{
                        string s = @item.productname.ToString();
                    }
                    <p>@Html.ActionLink(s, "Details", "reviews", new { id = @item.Id }, null)</p>
                    @* <h2>  @Html.ActionLink(item.Name, "Details", "products", new { id = item.Id }, null)</h2>*@

                </div>


            }

        </div>
    </div>
    <center>
        <h2>Latest Reviews</h2>
        @foreach (var x in Model)
        {
            <div class="container">
                <div class="left-text hidden-xs">
                    <em>
                        <p>
                            @Html.DisplayFor(model => x.Product.productname)
                        </p>
                        <p>
                            @Html.DisplayFor(model => x.user.name)
                        </p>
                        <p>
                            @Html.DisplayFor(model => x.content)
                        </p>
                        @for (int i = 0; i < x.rating; i++)
                        {
                            <span class="glyphicon glyphicon-star" style="color:yellow"></span>
                        }
                        @for (int i = x.rating; i < 5; i++)
                        {
                            <span class="glyphicon glyphicon-star-empty"></span>
                        }
                        <p>
                            @Html.DisplayFor(model => x.dape_post)
                        </p>
                    </em>
                </div>
                <hr>
            </div>

        }
    </center>
    <div class="container">
